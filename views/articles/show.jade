extends ../layout

block content

  #article-show
    .panel.panel-default
      .panel-heading
        h3 #{article.title}
      .panel-body
        img.capture(src="/images/no_photo.jpg", alt="capture")

        .content
          !{article.content}
        - if (user)
          button#complete-btn.btn.btn-azure(data-article-id="#{article.id}",
                                            data-category="#{article.category.dataValues.name}") 
            | 閱讀完成
  #search-result.animated.hide
    button.close.pull-right(type="button", aria-label="Close")
      span(aria-hidden="true")
        | &times;
    p.result
    button.btn.btn-azure.pull-right 加入魚譜
append bottom
  script(src="/javascripts/articles/show.js")